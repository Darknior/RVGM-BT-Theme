<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	
	<view name="detailed" displayName="${detailedViewName}">
		
		<!-- Screenshot / Front Cover / Back Cover -->
		<image name="md_image, md_thumbnail, md_fanart">
			<origin>0.5 0.5</origin>
			<pos>0.595 0.737</pos>
			<maxSize>0.229 0.39</maxSize>
		</image>
		<image name="md_fanart">
			<zIndex>31</zIndex>
			<storyboard repeatAt="0">
					<animation property="opacity" from="0" to="0"  begin="0"     duration="5000" mode="linear"/>
					<animation property="opacity" from="0" to="1"  begin="5000"  duration="350"  mode="linear"/>
					<animation property="opacity" from="1" to="1"  begin="5350"  duration="5000" mode="linear"/>
					<animation property="opacity" from="1" to="0"  begin="10350" duration="350"  mode="linear"/>
			</storyboard>
		</image>
		
		<image name="md_marquee">
			<pos>0.595 0.162</pos>
			<maxSize>0.234 0.2</maxSize>
		</image>
		<video name="md_video">
			<pos>0.25 0.38</pos>
			<maxSize>0.39 0.54</maxSize>
		</video>
		
		<!-- LABEL -->
		
		<text name="md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_releasedate, 
					md_lbl_playcount, md_lbl_lastplayed, md_lbl_gametime">
			<size>0.115 0.03</size>
			<alignment>left</alignment>
		</text>
		<text name="md_lbl_developer">
			<pos>0.48 0.27</pos>
		</text>
		<text name="md_lbl_publisher">
			<pos>0.48 0.307</pos>
		</text>
		<text name="md_lbl_genre">
			<pos>0.48 0.344</pos>
		</text>
		<text name="md_lbl_releasedate">
			<pos>0.48 0.381</pos>
		</text>

		<text name="md_lbl_playcount">
			<pos>0.48 0.418</pos>
		</text>
		<text name="md_lbl_lastplayed">
			<pos>0.48 0.455</pos>
		</text>
		<text name="md_lbl_gametime">
			<pos>0.48 0.492</pos>
		</text>
		
		<!-- METADATA -->
		
		<text name="md_developer, md_publisher, md_genre, md_playcount, md_gametime">
			<alignment>right</alignment>
		</text>
		<datetime name="md_releasedate, md_lastplayed">
			<alignment>right</alignment>
		</datetime>
		
		<text name="md_developer, md_publisher, md_genre">
			<size>0.12 0.03</size>
		</text>
		<text name="md_developer">
			<pos>0.59 0.27</pos>
		</text>
		<text name="md_publisher">
			<pos>0.59 0.307</pos>
		</text>
		<text name="md_genre">
			<pos>0.59 0.344</pos>
		</text>
		<datetime name="md_releasedate">
			<pos>0.59 0.381</pos>
			<size>0.12 0.03</size>
		</datetime>
		
		<text name="md_playcount">
			<pos>0.59 0.418</pos>
			<size>0.12 0.03</size>
		</text>
		<datetime name="md_lastplayed">
			<size>0.12 0.03</size>
			<pos>0.59 0.455</pos>
		</datetime>
		<text name="md_gametime">
			<fontSize>0.025</fontSize>
			<size>0.12 0.03</size>
			<pos>0.59 0.492</pos>
		</text>
		
		<text name="md_description">
			<pos>0.053 0.696</pos>
			<size>0.404 0.17</size>
		</text>
		
		<text name="md_players">
			<pos>0.053 0.872</pos>
			<size>0.18 0.079</size> <!-- Width / Height -->
		</text>
		<rating name="md_rating">
			<pos>0.301 0.88</pos>
			<size>0.1406 0.0594</size>
		</rating>
		
		<!-- STATUS Icons -->

		<image name="md_hidden, md_nothidden">
			<pos>0.795 0.937</pos>
			<path>./_art/icons/hidden.png</path>
		</image>
		<image name="md_kidgame, md_notkidgame">
			<pos>0.815 0.937</pos>
			<path>./_art/icons/kid.png</path>
		</image>
		<image name="md_favorite, md_notfavorite">
			<pos>0.835 0.937</pos>
			<path>./_art/icons/favorite.png</path>
		</image>
		<!-- PDF from gamelist -->
		<image name="md_manual, md_nomanual">
			<pos>0.855 0.937</pos>
			<path>./_art/icons/manual.png</path>
		</image>
		<image name="md_map, md_nomap">
			<pos>0.875 0.937</pos>
			<path>./_art/icons/map.png</path>
		</image>
		<!-- <image name="md_news, md_nonews">
			<pos>0.895 0.937</pos>
			<path>./_art/icons/news.png</path>
		</image> -->
		<!-- Only show if System support -->
		<image name="md_savestate, md_nosavestate">
			<pos>0.895 0.937</pos>
			<path>./_art/icons/savestate.png</path>
		</image>
		<image name="md_cheevos, md_notcheevos">
			<pos>0.915 0.937</pos>
			<path>./_art/icons/cheevos.png</path>
		</image>

		<!-- FLAG for game language -->

		<image name="md_flag">
			   <origin>0 0</origin>
			   <pos>0.25 0.895</pos>
			   <maxSize>0.03 0.05</maxSize>
		</image>
		
	</view>
	
</theme>