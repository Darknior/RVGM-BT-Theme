<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	
	<customView name="gridScreenshot" inherits="gridTitleshot" displayName="${tilesScreenshotVideoMarqueeViewName}">
		
        <!-- Gris Images -->
        <imagegrid name="gamegrid">
            <imageSource>image</imageSource> <!-- thumbnail / titleshot / marquee -->
        </imagegrid>
    
		<!-- Remplace le Marquee si manquant -->
		<text name="gridtile">
			<visible>true</visible>
		</text>
		<text name="gridtile_selected">
			<visible>true</visible>
		</text>
		
		<!-- MARQUEE -->
		<image name="gridtile.marquee">
			<color>FFFFFFD0</color>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>0.70 0.70</size> <!-- Initial -->
		</image>
		<image name="gridtile.marquee:selected">      
			<color>FFFFFFFF</color>
			<size>0.90 0.90</size> <!-- Zoom -->
		</image>
		<image name="gridtile.marquee:videoplaying">      
			<color>FFFFFFA0</color>
			<pos>0.5 0.17</pos>
			<size>0.50 0.25</size> <!-- Mini -->
		</image>
		
	</customView>
	
</theme>