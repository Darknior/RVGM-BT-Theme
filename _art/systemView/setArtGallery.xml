><?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	
	<variables>
		<activeView>artGalery</activeView>
	</variables>
	
	<view name="system">

		<!-- System BACK-ILLUSTRAION -->
		<image name="bg-image" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<!-- <pos>0.0151 0.0445</pos> -->
			<size>1 1</size>
			<!-- <size>0.9698 0.911</size> -->
			<path>./background-default.jpg</path>
			<path>./../../${system.theme}/background.jpg</path>
			<color>ffffffff</color>
			<linearSmooth>true</linearSmooth>
			<tile>false</tile> <!-- Repeat / Streach image -->
			<zIndex>11</zIndex> <!-- Default 10 for extra -->
			<saturation>0.9</saturation>
			<storyboard>
				<animation property="w" 		from="1.1" 		to="1" 		mode="easeOutQuint" 	duration="750"/>
				<animation property="color" 	from="00000000" 		to="ffffff" mode="easeInOut" 	duration="125"/>
			</storyboard>
		</image>
		
		<!-- Sytem AVATAR -->
		<image name="avatar" extra="static">
			<origin>0 0</origin> <!-- Left -->
			<pos>0.2823 0.047</pos>
			<maxSize>0.2969 0.9067</maxSize>
			<path>./../../${system.theme}/avatar.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>16</zIndex>
			<saturation>1.2</saturation>
		</image>
		
		<!-- BACKGROUND Games Counter -->
		<image name="bg-systemInfo" extra="static">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.95</pos>
			<maxSize>0.1578 0.08</maxSize>
			<color>FFFFFF${opacity}</color>
			<path>./bg-systemInfo.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>49</zIndex>
		</image>

		<text name="systemInfo">
			<glowColor>00000080</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>1</glowOffset>
		</text>
		
	</view>
	
</theme>