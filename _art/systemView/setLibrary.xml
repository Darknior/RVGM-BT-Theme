<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	
	<variables>
		<activeView>library</activeView>
	</variables>
	
	<view name="system">
	
		<!-- System BACK-ILLUSTRAION -->
		<image name="bg-image" extra="true">
			<origin>0 0</origin>
			<path>./background-default.jpg</path>
			<path>./../../${system.theme}/background.jpg</path>
			<color>ffffffff</color>
			<tile>false</tile> <!-- Repeat / Streach image -->
			<zIndex>10</zIndex> <!-- Default 10 for extra -->
		</image>
		
		<!-- Sytem AVATAR -->
		<image name="avatar" extra="static">
			<origin>0 0</origin> <!-- Left -->
			<pos>0.2823 0.047</pos>
			<maxSize>0.2969 0.9067</maxSize>
			<path>./../../${system.theme}/avatar.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>16</zIndex>
		</image>
		
		<!-- Sytem DESCRIPTION BACK -->
		<image name="synopsys" extra="static">
			<origin>0 0</origin> <!-- Left -->
			<size>0.4344 0.2374</size>
			<path>./bg-sys-description.png</path>
			<color>FFFFFF${opacity}</color>
			<zIndex>20</zIndex>
		</image>
		
		<!-- Sytem INFO BACK -->
		<image name="info-bg, info" extra="static">
			<origin>0 0</origin> <!-- Left -->
			<size>0.2469 0.6769</size>
			<path>./bg-sys-info-empty.png</path>
			<zIndex>20</zIndex>
		</image>
		<image name="info-bg" extra="static">
			<color>FFFFFF${opacity}</color>
		</image>
		<!-- Sytem INFO LOGOS -->
		<image name="info" extra="static">
			<path>./../empty.png</path>
			<path>./../../${system.theme}/info.png</path>
			<path>./../../${system.theme}/info-${langue}.png</path>
			<zIndex>21</zIndex>
		</image>
		
		<!-- Sytem PHOTO -->
		<image name="photo" extra="static">
			<origin>0.5 0.5</origin> <!-- center -->
			<maxSize>0.222 0.2591</maxSize>
			<path>./../../${system.theme}/photo.png</path>
			<path>./../../${system.theme}/photo-${langue}.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>22</zIndex>
		</image>
		
		<!-- Sytem VIDEO PREVIEW -->
		<video name="videoPreview" extra="static">
			<origin>0.5 0.5</origin>
			<size>0.222 0.2591</size>
			<path>{random}</path>                 
			<delay>2</delay>
			<effect>${videoEffect}</effect>
			<zIndex>23</zIndex>      
		</video>
		
		<!-- System ALL TEXT -->
        <text name="sys_label, sys_info, sys_description"> <!-- systemInfo -->
			<origin>0 0</origin>
			<verticalAlignment>top</verticalAlignment> <!-- top / center / bottom -->
			<color>000000</color>
			<fontSize>0.023</fontSize>
			<lineSpacing>1.3</lineSpacing>
			<forceUppercase>0</forceUppercase>
			<fontPath>./../font/${fontBold}</fontPath>
			<alignment>left</alignment>			
			<zIndex>50</zIndex>
        </text>

		<!-- TEXT Info Label -->
		<text name="sys_label" extra="static">
			<fontPath>./../font/${fontBold}</fontPath>
			<color>${userDarkColor}</color>
			<alignment>right</alignment>
			<size>0.081 0.22</size>
			<text>${sysLabel}</text>
		</text>
		<!-- TEXT Info -->
		<text name="sys_info" extra="static">
			<size>0.146 0.19</size>
		</text>
		<!-- TEXT Description -->
		<text name="sys_description" extra="static">
			<size>0.415 0.198</size>
			<lineSpacing>1.2</lineSpacing>
		</text>
		
	</view>

</theme>