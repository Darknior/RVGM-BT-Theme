<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>

	<view name="system">

		<image name="avatar_ghost2" extra="true">
			<visible>true</visible>
			<color>5050ff</color>
			<storyboard>
					<animation property="y" from="2" begin="0" duration="350" mode="linear"/>
					<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>

		<image name="avatar_ghost1" extra="true">
			<visible>true</visible>
			<color>50ff50</color>
			<storyboard repeatAt="3000">
				<animation property="y" from="2" begin="0" duration="350" mode="linear"/>
				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>

				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

				<animation property="origin" to="0.05 0" begin="3000" duration="" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="3100" duration="150" mode="linear"/>		

				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

				<animation property="origin" to="0.05 0" begin="5000" duration="" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="5050" duration="50" mode="linear"/>						

				<animation property="origin" to="0.075 0" begin="5150" duration="" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="5200" duration="50" mode="linear"/>	
					
				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

				<animation property="origin" to="0.05 0" begin="9000" duration="" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="9050" duration="50" mode="linear"/>						

				<animation property="origin" to="0.075 0" begin="9150" duration="" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="9200" duration="50" mode="linear"/>	

				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

				<animation property="origin" to="0.05 0" begin="9500" duration="" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="9550" duration="50" mode="linear"/>						

				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

				<animation property="origin" from="0 0" to="0 0" begin="9700" duration="5000" mode="linear"/>	
			</storyboard>
		</image>

		<image name="avatar" extra="true">
			<storyboard repeatAt="3000">
				<animation property="y" from="2" begin="0" duration="350" mode="linear"/>
				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>

				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
					
				<animation property="color" from="ff000050" to="ff000050" begin="3000" duration="" mode="linear"/>
				<animation property="origin" to="0.025 0" 	begin="3000" duration="" mode="linear"/>
				<animation property="color" to="ffffff" begin="3100" duration="150" mode="linear"/>
				<animation property="origin" to="0 0" 	begin="3100" duration="150" mode="linear"/>

				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

				<animation property="color" from="ff000050" to="ff000050" begin="5000" duration="" mode="linear"/>
				<animation property="origin" to="0.025 0" 	begin="5000" duration="" mode="linear"/>
				<animation property="color" to="ffffff" begin="5050" duration="50" mode="linear"/>
				<animation property="origin" to="0 0" 	begin="5050" duration="50" mode="linear"/>
				
				<animation property="color" from="ff000050" to="ff000050" begin="5150" duration="" mode="linear"/>
				<animation property="origin" to="0.05 0" 	begin="5150" duration="" mode="linear"/>
				<animation property="color" to="ffffff" begin="5200" duration="50" mode="linear"/>
				<animation property="origin" to="0 0" 	begin="5200" duration="50" mode="linear"/>
					
				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

				<animation property="color" from="ff000050" to="ff000050" begin="9000" duration="" mode="linear"/>
				<animation property="origin" to="0.025 0" 	begin="9000" duration="" mode="linear"/>
				<animation property="color" to="ffffff" begin="9050" duration="50" mode="linear"/>
				<animation property="origin" to="0 0"	begin="9050" duration="50" mode="linear"/>
				
				<animation property="color" from="ff000050" to="ff000050" begin="9150" duration="" mode="linear"/>
				<animation property="origin" to="0.05 0" 	begin="9150" duration="" mode="linear"/>
				<animation property="color" to="ffffff" begin="9200" duration="50" mode="linear"/>
				<animation property="origin" to="0 0" 	begin="9200" duration="50" mode="linear"/>

				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

				<animation property="color" from="ff000050" to="ff000050" begin="9500" duration="" mode="linear"/>
				<animation property="origin" to="0.025 0" 	begin="9500" duration="" mode="linear"/>
				<animation property="color" to="ffffff" begin="9550" duration="50" mode="linear"/>
				<animation property="origin" to="0 0" 	begin="9550" duration="50" mode="linear"/>				

				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

				<animation property="color" to="ffffff" begin="9700" duration="5000" mode="linear"/>
				<animation property="origin" from="0 0" to="0 0" begin="9700" duration="5000" mode="linear"/>			
			</storyboard>
		</image>

	</view>

</theme>