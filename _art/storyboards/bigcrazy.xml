<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>

	<view name="system">

		<image name="avatar" extra="true">
			<storyboard>
				<animation property="y" from="2" begin="0" duration="350" mode="easyOut"/>
        		<animation property="scale" to="1.2" begin="350" autoreverse="true" duration="300" repeat="forever" mode="easyInOut"/>
        		<animation property="rotation" from="-3" to="3" begin="500" autoreverse="true" duration="300" repeat="forever" mode="easyInOut"/>
        		<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>

	</view>

</theme>