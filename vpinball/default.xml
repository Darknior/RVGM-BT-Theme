<theme>
	<formatVersion>7</formatVersion>

	<view name="system">

		<!-- AVATARS -->
		<image name="avatar" extra="static">
			<origin>0 0</origin>
			<pos>0.30 0.27</pos>
			<maxSize>0.32 0.66</maxSize>
			<storyboard repeatAt="350">
        		<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
				<animation property="x" from="1" begin="0" duration="350" mode="easyOut"/>
				<animation property="origin" to="0.01 0.01" begin="350" duration="500" mode="linear"/>
				<animation property="origin" to="0.02 0" begin="850" duration="500"  mode="linear"/>
				<animation property="origin" to="0.01 0.01" begin="1350" duration="500" mode="linear"/>
				<animation property="origin" to="0 0" begin="1850" duration="500"  mode="linear"/>
			</storyboard>
		</image>
		<image name="avatar2" extra="static">
			<origin>0 0</origin>
			<pos>0.55 0.25</pos>
			<maxSize>0.227 0.754</maxSize>
			<path>./avatar2.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>15</zIndex>
			<storyboard repeatAt="350">
        		<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
				<animation property="x" from="1" begin="0" duration="350" mode="easyOut"/>
			</storyboard>
		</image>
		
		<!-- SHADOW -->
		<image name="avatar3" extra="static">
			<origin>0 0</origin>
			<pos>0.405 0.73</pos>
			<maxSize>0.365 0.26</maxSize>
			<path>./avatar-shadow.png</path>
			<linearSmooth>true</linearSmooth>
			<opacity>0.8</opacity>
			<zIndex>14</zIndex>
			<storyboard repeat="forever">
        		<animation property="opacity" begin="1000" from="0.8" to="0.5" duration="10" autoreverse="true" repeat="5" mode="linear"/>
				<animation property="opacity" begin="4000" to="0" duration="0"/>
			</storyboard>
		</image>
		
		<!-- LIGHT -->
		<image name="avatar6" extra="static">
			<pos>0.484 0.045</pos>
			<size>0.5 0.8</size>
			<path>./avatar-light.png</path>
			<zIndex>16</zIndex>
			<storyboard repeatAt="350">
				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
        		<animation property="opacity" begin="3800" from="1" to="0.8" duration="10" autoreverse="true" repeat="5" mode="linear"/>
        		<animation property="opacity" begin="4500" from="1" to="0.8" duration="5" autoreverse="true" repeat="3" mode="linear"/>
        		<animation property="opacity" begin="6500" from="1" to="0.8" duration="7" autoreverse="true" repeat="2" mode="linear"/>
        		<animation property="opacity" begin="7000" from="1" to="0.8" duration="5" autoreverse="true" repeat="4" mode="linear"/>
        		<animation property="opacity" begin="12000" from="1" to="0.8" duration="10" autoreverse="true" repeat="10" mode="linear"/>
			</storyboard>
		</image>
		
		<!-- SMOKE -->
		<image name="avatar4, avatar5" extra="static">
			<origin>0 0</origin>
			<size>0.78 0.625</size>
			<linearSmooth>true</linearSmooth>
			<zIndex>17</zIndex>
		</image>
		<image name="avatar4" extra="static">
			<pos>0.016 0.5</pos>
			<path>./avatar-smoke.png</path>
			<storyboard repeatAt="350">
        		<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
				<animation property="x" from="-1" begin="0" duration="350" mode="easyOut"/>
				<animation property="origin" to="-0.3 0" begin="100" duration="10000" autoreverse="true" mode="linear"/>
			</storyboard>
		</image>
		<image name="avatar5" extra="static">
			<pos>0.204 0.38</pos>
			<path>./avatar-smoke.png</path>
			<color>ffffff</color>
			<storyboard repeatAt="350">
        		<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
				<animation property="x" from="1" begin="0" duration="350" mode="easyOut"/>
				<animation property="origin" to="0.2 0" begin="100" duration="10000" autoreverse="true" mode="linear"/>
			</storyboard>
		</image>
	</view>
</theme>
