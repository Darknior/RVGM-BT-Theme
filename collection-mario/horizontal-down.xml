<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
			<image name="avatar" extra="static">
			<origin>0 0</origin>
			<pos>0.75 0.25</pos>
			<maxSize>0.190 0.280</maxSize>
			<path>./avatar.png</path>
			<linearSmooth>true</linearSmooth>
		</image>
			<image name="avatar2" extra="static">
			<origin>0 0</origin>
			<pos>0.099 0.536</pos>
			<maxSize>0.170 0.160</maxSize>
			<path>./avatar2.png</path>
			<linearSmooth>true</linearSmooth>
		</image>


		<!-- HIDDE ELEMENTS -->
		<image name="synopsys, info-bg, info, console" extra="true">
			<visible>false</visible>
		</image>

		<video name="videoPreview" extra="true">
			<visible>false</visible>
		</video>
		
		<text name="systemInfo, sys_label, sys_info, sys_description" extra="true">
			<visible>false</visible>
		</text>
		
	</view>
	
</theme>

