<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
			<image name="avatar, avatar_ghost1, avatar_ghost2" extra="static">
			<origin>0 0</origin>
			<pos>0.33 0.23</pos>
			<maxSize>0.7200 0.7800</maxSize>
			<path>./avatar.png</path>
			<linearSmooth>true</linearSmooth>
		</image>

		<!-- HIDDE ELEMENTS -->
		<image name="synopsys, info-bg, info, console" extra="true">
			<visible>false</visible>
		</image>

		<video name="videoPreview" extra="true">
			<visible>false</visible>
		</video>
		
		<text name="systemInfo, sys_label, sys_info, sys_description" extra="true">
			<visible>false</visible>
		</text>
		
	</view>
	
</theme>
